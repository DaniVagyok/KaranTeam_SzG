CXX = g++
CXXFLAGS = -Wall -g
EXECUTABLE  := CiffCaffParser

$(EXECUTABLE): $(EXECUTABLE).o
	@echo "ðŸš§ Building..."
	$(CXX) $(CXXFLAGS) -o $(EXECUTABLE) $(EXECUTABLE).o

$(EXECUTABLE).o: $(EXECUTABLE).cpp
	$(CXX) $(CXXFLAGS) -c $(EXECUTABLE).cpp

clean:
	@echo "ðŸ§¹ Clearing..."
	-rm $(EXECUTABLE)
	-rm $(EXECUTABLE).o
